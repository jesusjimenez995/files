apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongo
spec:
  selector:
    matchLabels:
      app: mongo
  replicas: 1
  template:
    metadata:
      labels:
        app: mongo
    spec:
      containers:
      - name: mongo
        image: mongo:latest
        volumeMounts:
        - name: mongo-volume
          mountPath: /data/db
      volumes:
       - name: mongo-volume
         hostPath:
           path: /mnt/mongo-volume
           type: DirectoryOrCreate
